extends layout

block content
  // Page heading for the new patron form
  h1 New Patron

  // Display validation errors if any exist
  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li= error.message

  // Form for creating a new patron
  form(action="/patrons/new" method="POST")

    // First Name field
    p
      label(for="first_name") First Name:
      input#first_name(type="text" name="first_name" value=patron.first_name)

    // Last Name field
    p
      label(for="last_name") Last Name:
      input#last_name(type="text" name="last_name" value=patron.last_name)

    // Address field
    p
      label(for="address") Address:
      input#address(type="text" name="address" value=patron.address)

    // Email field
    p
      label(for="email") Email:
      input#email(type="email" name="email" value=patron.email)

    // Zip Code field
    p
      label(for="zip_code") Zip Code:
      input#zip_code(type="text" name="zip_code" value=patron.zip_code)

    // Submit button
    p
      input(type="submit" value="Create New Patron")